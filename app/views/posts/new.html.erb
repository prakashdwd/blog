<%= form_for @post do |f| %>

  <%= f.label 'Title' %>
  <%= f.text_field :title %>
  <br /> <br />

  <%= f.label 'Body' %>
  <%= f.text_area :body %>
  <br /> <br />

    <%= f.select :category_id, Category.all.collect { |x| [x.name, x.id] }, {:include_blank => "Choose One" } %>


  <%= submit_tag "create" %>

<% end %>